{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/test/*": ["test/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "test/**/*", "jest.config.js"], // Add "jest.config.js
  "exclude": ["node_modules", "**/*.(spec|test).ts"]
}
